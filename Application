// scripts/app.js
document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.getElementById('menuButton');
    const dropdownMenu = document.getElementById('dropdownMenu');
    const tournamentsCheckbox = document.getElementById('tournamentsCheckbox');
    const tournamentList = document.getElementById('tournamentList');

    // Toggle menu visibility
    menuButton.addEventListener('click', () => {
        dropdownMenu.classList.toggle('hidden');
    });

    // Toggle tournament list visibility
    tournamentsCheckbox.addEventListener('change', () => {
        if (tournamentsCheckbox.checked) {
            tournamentList.classList.remove('hidden');
        } else {
            tournamentList.classList.add('hidden');
        }
    });
});
